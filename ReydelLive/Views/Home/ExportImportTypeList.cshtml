
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model  IEnumerable<ReyDel.Models.ExcelImportTypeMaster>
<section class="content">


    <div class="row">
        <div class="col-xs-12">

            <!-- /.box -->
            <div class="box">
                <div class="box-header">

                    <h3 class="box-title"><b>Excel Import Type List</b> </h3>

                    <button type="button" class="btn btn-info pull-right" data-toggle="modal" data-target="#ExcelImportsTypes">Add New</button>
                    @Html.Partial("../Home/AddExcelImportType")
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Sr. No.</th>
                                <th> Import Modes</th>
                                <th> Import Type Name </th>
                                <th> Action </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td>@item.M_Import_Type_ID </td>
                                    <td>@item.M_Import_Type_Modes</td>
                                    <td>
                                        @item.M_Import_Type_Name
                                    </td>

                                    <td>
                                        <span class="EditExcelImportsTypes" M_ImportTypeModes="@item.M_Import_Type_Modes" M_ImportTypeID="@item.M_Import_Type_ID" M_ImportTypeName="@item.M_Import_Type_Name"><i class="fa fa-edit"></i></span>
                                    </td>
                                </tr>

                            }

                        </tbody>

                    </table>
                </div>

            </div>

        </div>

    </div>

</section>
<div id="UpdateExcelImportsTypes" class="modal fade in" style="padding-top: 50px;" data-backdrop="static" data-keyboard="false" role="dialog">
    <div class="modal-dialog">
        Modal content
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Update ExcelImports Types  </h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="form-group" hidden>
                        <input type="text" class="form-control" id="UpdateM_Import_Type_ID">
                    </div>
                    <div class="form-group">
                        <label> ImportType Name</label>
                        <input type="text" class="form-control" id="UpdateM_Import_Type_Name" placeholder="UpdateM_Import_Type_Name">
                    </div>
                    <div class="form-group">
                        <label>ImportType Modes</label>
                        <input type="text" class="form-control" id="UpdateM_Import_Type_Modes" placeholder="UpdateM_Import_Type_Modes">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnSaveChanges">Save Changes</button>
            </div>
        </div>

    </div>
</div>


<script src="https://code.jquery.com/jquery-3.4.1.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
        crossorigin="anonymous"></script>
<script src="~/dist/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<!-- DataTables -->
<script src="~/dist/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/dist/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
<!-- SlimScroll -->
<script src="~/dist/bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
<!-- FastClick -->
<script>
    function refresh() {
        $('.EditExcelImportsTypes').on('click', function () {
            var M_ImportTypeName = this.getAttribute("M_ImportTypeName");
            var M_ImportTypeModes = this.getAttribute("M_ImportTypeModes");
            var M_ImportTypeID = this.getAttribute("M_ImportTypeID");
            $("#UpdateM_Import_Type_ID").val(M_ImportTypeID);
            $("#UpdateM_Import_Type_Name").val(M_ImportTypeName);
            $("#UpdateM_Import_Type_Modes").val(M_ImportTypeModes);
            $("#UpdateExcelImportsTypes").show();
        });

    };
</script>
<script src="~/Content/js/jquery-2.1.1.js"></script>
<script type="text/javascript">
    refresh();
    $('#example1').DataTable({
        'paging': true,
        'lengthChange': false,
        'searching': false,
        'ordering': true,
        'info': true,
        'autoWidth': false
    })
    $(document).ready(function () {
        $('.close').on('click', function () {
            $("#UpdateExcelImportsTypes").hide();
        });
        $('#btnAdd').on('click', function () {

            $.ajax({
                type: 'POST',
                dataType: 'json',
                url: '/Home/AddExcelImportType',
                data:
                {
                    ImportTypeName: $("#ImportTypeName").val(),
                    ImportTypeModes: $("#ImportTypeModes").val(),
                },
                success: function (data) {
                    $("#AddExcelImportType").hide(),
                        // alert(data);
                        location.reload();
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {

                }
            });
        });
         function getCity()
    {
             var returnResult = [];
                          $.ajax({
                        contentType: "application/json; charset=utf-8",
                         url: "@Url.Action("GetRejecteionReason", "Home")",
                        method: 'GET',
                        async: 'false',
                        dataType: 'json',
                        success: function (result) {
                            var data = $.map(result, function (obj) {
                                obj.value = obj.Text; // desired field
                                obj.data = obj.Value; // desired field
                                returnResult.push(obj);
                                $("#City").autocomplete({
                                    lookup: returnResult,
                                    onSelect: function (suggestion) {
                                        $("#CityId").val(suggestion.data);

                                    }
                                });

                            });
                        },
                        error: function () { }
                  });
        }
        $('#btnSaveChanges').on('click', function () {
            debugger;
            var M_ImportTypeID = $("#UpdateM_Import_Type_ID").val();
            var M_ImportTypeName = $("#UpdateM_Import_Type_Name").val();
            var M_ImportTypeModes = $("#UpdateM_Import_Type_Modes").val();
            $.ajax({
                type: 'POST',
                dataType: 'json',
                url: '/Home/UpdateExcelImportsTypes ',
                data:
                {
                    M_Import_Type_ID :M_ImportTypeID,
                    M_Import_Type_Name: M_ImportTypeName,
                    M_Import_Type_Modes: M_ImportTypeModes,
                },
                success: function (data) {
                    $("#UpdateExcelImportsTypes").hide();
                    location.reload();
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {

                }
            });
        });
    });
</script>