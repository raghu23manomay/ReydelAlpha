<script src="~/dist/bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
<!-- FastClick -->
<script>
    function refresh() {

        $('.EditProductionEntry').on('click', function () {
            var UEntry_Id = this.getAttribute("UEntry_Id");
            var UEntry_Date = this.getAttribute("UEntry_Date");
            var UCalendar_id = this.getAttribute("UCalendar_id");
            var UEmp_id = this.getAttribute("UEmp_id");
            var UShift = this.getAttribute("UShift");
            var UMachine = this.getAttribute("UMachine");
            var UREI = this.getAttribute("UREI");
            var UPart = this.getAttribute("UPart");
            var UPlan_Qty = this.getAttribute("UPlan_Qty");
            var UAcceptedQty = this.getAttribute("UAcceptedQty");
            var UCumm_Accepted_Qty = this.getAttribute("UCumm_Accepted_Qty");
            var UOperator_Emp = this.getAttribute("UOperator_Emp");
            var UShift_superviser = this.getAttribute("UShift_superviser");
            $("#EEntry_Id").val(UEntry_Id);
            $("#EEntry_Date").val(UEntry_Date);
            $("#ECalendar_id").val(UCalendar_id);
            $('#EmployeeID option[value="'+UEmp_id+'"]').attr("selected", "selected"); 
            $('#Shift_id option[value="' + UShift + '"]').attr("selected", "selected"); 
            $("#EMachine_Id").val(UMachine);
            $('#REI_Id option[value="' + UREI + '"]').attr("selected", "selected"); 
            $("#EPart_Id").val(UPart);
            $("#EPlan_Qty").val(UPlan_Qty);
            $("#EAcceptedQuntity").val(UAcceptedQty);
            $("#ECumm_Accepted_Qty").val(UCumm_Accepted_Qty);
            $('#OperatorEmp_id option[value="' + UOperator_Emp + '"]').attr("selected", "selected"); 
            $('#ShiftSuperviserId option[value="' + UShift_superviser + '"]').attr("selected", "selected"); 
                $("#UpdateProduction").show();
        });
    };

</script>
<script type="text/javascript">

    refresh();
    $('#example1').DataTable({
        'paging': true,
        'lengthChange': false,
        'searching': false,
        'ordering': true,
        'info': true,
        'autoWidth': false
    })

    $(document).ready(function () {
        $('.close').on('click', function () {
            $("#UpdateProduction").hide();
        });
        $('#btnSaveChanges').on('click', function () {
            var Eid = $("#EmployeeID").val();
            var Rid = $("#REI_Id").val();
            var shiftsup = $("#ShiftSuperviserId").val();
            var shift = $("#Shift_id").val();
            var AcceptedQty = $("#EAcceptedQuntity").val();
            var UEntry_Id = $("#EEntry_Id").val();
            var UEntry_Date = $("#EEntry_Date").val();
            var UCalendar_id = $("#ECalendar_id").val();
            var UMachine = $("#EMachine_Id").val();
            var UPart = $("#EPart_Id").val();
            var UPlan_Qty = $("#EPlan_Qty").val();
            //var UAcceptedQty = $("EAcceptedQuntity").val();
            var UCumm_Accepted_Qty = $("#ECumm_Accepted_Qty").val();
            var UOperator_Emp = $("#OperatorEmp_id").val();
          

            $.ajax({
                type: 'POST',
                dataType: 'json',
                url: '/Home/UpdateProductionEntry',
                data:
                {
                    Entry_Id: UEntry_Id,
                    Calendar_id: UCalendar_id,
                    Entry_Date: UEntry_Date,
                    Emp_id: Eid,
                    Shift: shift,
                    Machine: UMachine,
                    REI: Rid,
                    Part: UPart,
                    Plan_Qty: UPlan_Qty,
                    Cumm_Accepted_Qty: UCumm_Accepted_Qty,
                    Accepted_Qty: AcceptedQty,
                    Operator_Emp: UOperator_Emp,
                    Shift_superviser: shiftsup
                },
                success: function (data) {
                    $("#UpdateProduction").hide();
                    location.reload();
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {

                }
            });
        });
    });



</script>