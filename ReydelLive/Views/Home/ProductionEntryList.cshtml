

@model  IEnumerable<ReyDel.Models.ProductionEntryList>
<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <!-- /.box -->
            <div class="box">
                <div class="box-header">

                    <h3 class="box-title"><b>Production Entry List</b></h3>
                    <button type="button" class="btn btn-info pull-right" data-toggle="modal" data-target="#AddProductionEntry">Add New </button>

                    @Html.Partial("../Home/AddProductionEntry")

                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>

                               
                                <th>  Entry Date   </th>
                                <th>   Employee Nmae  </th>
                                <th>    Shift </th>
                                <th>   Machine  </th>
                                <th>    REI </th>
                                <th> Part</th>
                                <th>  Plan Qty   </th>
                                <th>  Cumm Accepted Qty   </th>
                                <th>Accepted Qty</th>
                                <th>Operator Emp</th>
                                <th>Shift superviser</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                   
                                    <td>@item.EntryDate</td>
                                    <td>@item.Emp_id</td>
                                    <td>@item.Shift</td>
                                    <td>@item.Machine</td>
                                    <td>@item.REI</td>
                                    <td>@item.Part</td>
                                    <td>@item.Plan_Qty</td>
                                    <td>@item.Cumm_Accepted_Qty</td>
                                    <td>@item.Accepted_Qty</td>
                                    <td>@item.Operator_Emp</td>
                                    <td>@item.Shift_superviser</td>

                                    <td>
                                        <span class="EditProductionEntry"
                                              UEntry_Id="@item.Entry_Id"
                                              UEntry_Date="@item.EntryDate"
                                              UCalendar_id="@item.Calendar_id"
                                              UEmp_Id="@item.Emp_id"
                                              UShift="@item.Shift"
                                              UMachine="@item.Machine"
                                              UREI="@item.REI"
                                              UPart="@item.Part"
                                              UPlan_Qty="@item.Plan_Qty"
                                              UCumm_Accepted_Qty="@item.Cumm_Accepted_Qty"
                                              UAcceptedQty="@item.Accepted_Qty"
                                              UOperator_Emp="@item.Operator_Emp"
                                              UShift_superviser="@item.Shift_superviser"><i class="fa fa-edit"></i></span>
                                    </td>

                                </tr>

                            }

                        </tbody>

                    </table>
                </div>

            </div>

        </div>

    </div>

</section>

<div id="UpdateProduction" class="modal fade in" data-backdrop="static" data-keyboard="false" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Update Production Entry</h4>
            </div>
            <div class="modal-body">

                <form role="form">
                    <div class="form-group" hidden>
                        <input type="text" class="form-control" id="EEntry_Id">
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Entry Date</label>
                                <input type="date" class="form-control" id="EEntry_Date" placeholder="Entry Date">
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Employe Name  </label>
                                @Html.DropDownList( "EmployeeID", new SelectList((System.Collections.IEnumerable)ViewData["Employee"], "Value", "Text",0), "Select Employee", new { @class = "form-control input-sm", @id = "EmployeeID", Title = "Source" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">

                            <div class="form-group">
                                <label>  Shift superviser</label>
                                @Html.DropDownList("ShiftSuperviserId", new SelectList((System.Collections.IEnumerable)ViewData["ShiftSuperviser"], "Value", "Text", 0), "Select Shift superviser", new { @class = "form-control input-sm", @id = "ShiftSuperviserId", Title = "Source" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label> Shift</label>
                                @Html.DropDownList("Shift_id", new SelectList((System.Collections.IEnumerable)ViewData["Shift"], "Value", "Text", 0), "Select Shift ", new { @class = "form-control input-sm", @id = "Shift_id", Title = "Source" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Machine</label>
                                <select name=" Machine" class="form-control" id="EMachine_Id">
                                    <option>2</option>
                                    <option>2</option>
                                    <option>2</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6">

                            <div class="form-group">
                                <label>  REI</label>
                                @Html.DropDownList("REI_Id", new SelectList((System.Collections.IEnumerable)ViewData["REI"], "Value", "Text",0), "Select REI", new { @class = "form-control input-sm", @id = "REI_Id", Title = "Source" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label> Part</label>
                                <select name=" Part " class="form-control" id="EPart_Id">
                                    <option>2</option>
                                    <option>2</option>
                                    <option>2</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>  Plan Quntity</label>
                                <input type="text" class="form-control" id="EPlan_Qty">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label> Cumm Accepted Qty</label>
                                <input type="text" class="form-control" id="ECumm_Accepted_Qty" placeholder="Cumm Accepted Qty">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label> Accepted Quntity</label>
                                <input type="text" class="form-control" id="EAcceptedQuntity" placeholder="  Accepted Quntity">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>  Operator Emp</label>
                                @Html.DropDownList("OperatorEmp_id", new SelectList((System.Collections.IEnumerable)ViewData["OperatorEmp"], "Value", "Text", 0), "Select OperatorEmp ", new { @class = "form-control input-sm", @id = "OperatorEmp_id", Title = "Source" })
                            </div>
                        </div>

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnSaveChanges">Save Changes</button>
            </div>
        </div>

    </div>
</div>
<script src="https://code.jquery.com/jquery-3.4.1.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
        crossorigin="anonymous"></script>
<script src="~/dist/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
