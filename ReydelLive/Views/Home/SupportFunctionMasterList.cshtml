<!-- Main content -->

@model  IEnumerable<ReyDel.Models.SupportFunctionMaster>
<section class="content">
    <div class="row">
        <div class="col-sm-9">

        </div>
        <div class="col-sm-3">

            <button type="button" class="btn btn-info " data-toggle="modal" data-target="#AddSupportFunctionMaster" style="margin-left:100px;">Add New  </button>

            @Html.Partial("../Home/AddSupportFunctionMaster")

        </div>
    </div>

    <div class="row" style="margin-top:20px">
        <div class="col-xs-12">

            <!-- /.box -->
            <div class="box">
                <div class="box-header">

                    <h3 class="box-title"><b>Support Function List</b></h3>


                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Sr. No.</th>
                                <th>Support Function Name</th>
                                <th>Support Function Code</th>
                                <th>Action</th>


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.SupportFunction_Id</td>
                                    <td>
                                        @item.SupportFunction_Name

                                    </td>
                                    <td>@item.SupportFunction_Code</td>
                                    <td> <a class=""><i class="fa fa-edit"></i></a></td>

                                </tr>

                            }

                        </tbody>

                    </table>
                </div>

            </div>

        </div>

    </div>

</section>
<span id="EditREI" data-toggle="modal" data-target="#EditREIMaster"></span>

<div class="modal fade" id="EditREIMaster" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit REI Master</h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="form-group" hidden>
                        <label>REI Master ID</label>
                        <input type="text" class="form-control" id="REIId" placeholder="REI Master ID">
                    </div>
                    <div class="form-group">
                        <label> REI Master Name</label>
                        <input type="text" class="form-control" id="REIName" placeholder="REI Master Name">
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" id="btnEdit">Edit</button>
            </div>
        </div>

    </div>
</div>
