<!-- Main content -->

@model  IEnumerable<ReyDel.Models.SupportFunctionMaster>
<section class="content">


    <div class="row">
        <div class="col-xs-12">

            <!-- /.box -->
            <div class="box">
                <div class="box-header">

                    <h3 class="box-title"><b>Support Function List</b></h3>
                    <button type="button" class="btn btn-info pull-right " data-toggle="modal" data-target="#AddSupportFunctionMaster" style="margin-left:100px;">Add New  </button>

                    @Html.Partial("../Home/AddSupportFunctionMaster")

                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Sr. No.</th>
                                <th>Support Function Name</th>
                                <th>Support Function Code</th>
                                <th>Action</th>


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.SupportFunction_Id</td>
                                    <td>
                                        @item.SupportFunction_Name

                                    </td>
                                    <td>@item.SupportFunction_Code</td>
                                    <td>
                                        <span class="EditSupportFunctionMaster" SupportFunctionName="@item.SupportFunction_Name" SupportFunctionId="@item.SupportFunction_Id" SupportFunctionCode="@item.SupportFunction_Code"><i class="fa fa-edit"></i></span>
                                    </td>

                                </tr>

                            }

                        </tbody>

                    </table>
                </div>

            </div>

        </div>

    </div>

</section>
<div id="UpdateSupportFunction" class="modal fade in" style="padding-top: 50px;" data-backdrop="static" data-keyboard="false" role="dialog">
    <div class="modal-dialog">
        Modal content
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Update Support Function   </h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="form-group" hidden>
                        <input type="text" class="form-control" id="UpdateSupportFunction_Id">
                    </div>
                    <div class="form-group">
                        <label> SupportFunction Name</label>
                        <input type="text" class="form-control" id="UpdateSupportFunction_Name" placeholder="UpdateSupport Function Name">
                    </div>
                    <div class="form-group">
                        <label>SupportFunction Code</label>
                        <input type="text" class="form-control" id="UpdateSupportFunction_Code" placeholder="Update Support Function Code">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnSaveChanges">Save Changes</button>
            </div>
        </div>

    </div>
</div>


<script src="https://code.jquery.com/jquery-3.4.1.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
        crossorigin="anonymous"></script>
<script src="~/dist/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<!-- DataTables -->
<script src="~/dist/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/dist/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
<!-- SlimScroll -->
<script src="~/dist/bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
<!-- FastClick -->
<script>
    function refresh() {
        $('.EditSupportFunctionMaster').on('click', function () {
            var SupportFunctionName = this.getAttribute("SupportFunctionName");
            var SupportFunctionCode = this.getAttribute("SupportFunctionCode");
            var SupportFunctionId = this.getAttribute("SupportFunctionId");
            $("#UpdateSupportFunction_Id").val(SupportFunctionId);
            $("#UpdateSupportFunction_Name").val(SupportFunctionName);
            $("#UpdateSupportFunction_Code").val(SupportFunctionCode);
            $("#UpdateSupportFunction").show();
        });

    };
</script>
<script src="~/Content/js/jquery-2.1.1.js"></script>
<script type="text/javascript">
    refresh();
    $('#example1').DataTable({
        'paging': true,
        'lengthChange': false,
        'searching': false,
        'ordering': true,
        'info': true,
        'autoWidth': false
    })
    $(document).ready(function () {
        $('.close').on('click', function () {
            $("#UpdateSupportFunction").hide();
        });
        $('#btnAdd').on('click', function () {

            $.ajax({
                type: 'POST',
                dataType: 'json',
                url: '/Home/AddSupportFunctionMaster',
                data:
                {
                    SupportFunctionName: $("#SupportFunction_Name").val(),
                    SupportFunctionCode: $("#SupportFunction_Code").val(),


                },
                success: function (data) {
                    $("#AddSupportFunctionMaster").hide(),
                        // alert(data);
                        location.reload();
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {

                }
            });
        });

        $('#btnSaveChanges').on('click', function () {
            debugger;
            var SupportFunctionId = $("#UpdateSupportFunction_Id").val();
            var SupportFunctionName = $("#UpdateSupportFunction_Name").val();
            var SupportFunctionCode = $("#UpdateSupportFunction_Code").val();
            $.ajax({
                type: 'POST',
                dataType: 'json',
                url: '/Home/UpdateSupportFunctionMaster ',
                data:
                {
                    SupportFunction_Id: SupportFunctionId,
                    SupportFunction_Name: SupportFunctionName,
                    SupportFunction_Code: SupportFunctionCode,
                },
                success: function (data) {
                    $("#UpdateSupportFunction").hide();
                    location.reload();
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {

                }
            });
        });
    });
</script>
