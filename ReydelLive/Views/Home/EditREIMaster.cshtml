
@{
    Layout = null;
}

<div class="modal fade" id="AddREIMaster" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add REI Master</h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="form-group" hidden>
                        <label>REI Master ID</label>
                        <input type="text" class="form-control" id="REIId" placeholder="REI Master ID">
                    </div>
                    <div class="form-group">
                        <label> REI Master Name</label>
                        <input type="text" class="form-control" id="REIName" placeholder="REI Master Name">
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" id="btnEdit">Edit</button>
            </div>
        </div>

    </div>
</div>

<script>
    $('#btnEdit').on('click', function () {
       
        $.ajax({
            type: 'POST',
            dataType: 'json',
            url: '/Home/UpdateREIMaster',

            data:
            {
                REI_Id: $("#REI_Id").val(),
                REIName: $("#REIName").val(),
             
            },
            success: function (data) {
                alert(data);
            },

            error: function (XMLHttpRequest, textStatus, errorThrown) {

            }
        });
    });
</script>

