
@*@model ReyDel.Models.RejectionReasonTypeMaster*@
@{
    ViewBag.Title = "AddRejectionType";
    Layout = null;
}


<div class="modal fade" id="AddRejectionType" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Rejection Type</h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="form-group">
                        <label>Rejection Reason</label>
                        @Html.DropDownList("Rejection_Reason_Id", new SelectList((System.Collections.IEnumerable)ViewData["RejectionReason"], "Value", "Text", 1), "Select Source", new { @class = "form-control input-sm",  @id = "Rejection_Reason_Id", Title = "Source" })
                        @*@Html.DropDownList("Rejection_Reason_Id", new SelectList((System.Collections.IEnumerable)ViewData["RejecteionReason"], "Value", "Text", Model.Rejection_Reason_Id), "Select Employee", new { @class = "form-control input-sm", @id = "RejecteionReasonID", Title = "Reason" })*@
                        <label style="color:red" id="EmployeeVal"></label>
                       
                    </div>
                    <div class="form-group">
                        <label>Rejection Type</label>
                        <input type="text" class="form-control" id="RejectionTypeName" placeholder="Rejection Type">
                    </div>
                    
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnSave">Submit</button>
            </div>
        </div>

    </div>
</div>
