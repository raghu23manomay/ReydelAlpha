<!-- Main content -->

@model  IEnumerable<ReyDel.Models.MaterialGradeMaster>

<section class="content">
    <div class="row">
        <div class="col-sm-10">

        </div>
        <div class="col-sm-2">

            <button type="button" class="btn btn-info " data-toggle="modal" data-target="#AddMaterialGrade">Add New</button>

            @Html.Partial("../Home/AddMaterialGrade")

        </div>
    </div>

    <div class="row" style="margin-top:20px">
        <div class="col-xs-12">

            <!-- /.box -->
            <div class="box">
                <div class="box-header">

                    <h3 class="box-title"><b>Material Grade List</b></h3>


                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table  table-striped">
                        <thead class="Th">
                            <tr>
                                <th>Sr. No.</th>
                                <th>Grade Name</th>
                                <th>Grade Rate </th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.Material_Grade_Id</td>
                                <td>
                                    @item.Material_Grade_name

                                </td>
                                <td> @item.Material_Grade_Rate</td>
                                <td> <a class="EditREI"><i class="fa fa-edit"></i></a></td>
                            </tr>

                            }

                        </tbody>

                    </table>
                </div>

            </div>

        </div>

    </div>

</section>


