<script type="text/javascript">

    $('#example1').DataTable({
        'paging': true,
        'lengthChange': false,
        'searching': false,
        'ordering': true,
        'info': true,
        'autoWidth': false
    })
    $(document).ready(function () {
        $('#btnAdd').on('click', function () {

            $.ajax({
                type: 'POST',
                dataType: 'json',
                url: '/Home/AddMaterialGrade',
                data:
                {
                    GradeName: $("#MaterialGradeName").val(),
                    GradeRate: $("#MaterialGradeRate").val(),
                },
                success: function (data) {
                    $("#AddMaterialGrade").hide(),
                        // alert(data);
                        location.reload();
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {

                }
            });
        });
    });
</script>
