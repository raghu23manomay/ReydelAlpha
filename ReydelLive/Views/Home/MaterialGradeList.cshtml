<!-- Main content -->

@model  IEnumerable<ReyDel.Models.MaterialGradeMaster>

<section class="content">
   

    <div class="row">
        <div class="col-xs-12">

            <!-- /.box -->
            <div class="box">
                <div class="box-header">

                    <h3 class="box-title"><b>Material Grade List</b></h3>

                    <button type="button" class="btn btn-info pull-right " data-toggle="modal" data-target="#AddMaterialGrade">Add New</button>

                    @Html.Partial("../Home/AddMaterialGrade")

                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table  table-striped" >
                        <thead class="Th">
                            <tr>
                                <th  style="width:100px;">Sr.No.</th>
                                <th  style="width:250px;">Grade Name</th>
                                <th  style="width:250px;">Grade Rate </th>
                                <th style="width:100px ;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td >@item.Material_Grade_Id</td>
                                <td>
                                    @item.Material_Grade_name

                                        </td>
                                        <td> @item.Material_Grade_Rate</td>
                                        <td>
                                            <span class="EditMaster" gname="@item.Material_Grade_name" gid="@item.Material_Grade_Id" grate="@item.Material_Grade_Rate"><i class="fa fa-edit"></i></span>
                                        </td>
                                    </tr>

                                }

                            </tbody>

                        </table>
                    </div>

                </div>
               

            </div>

        </div>

   

</section>

<div id="UpdateGrade" class="modal fade in" style="padding-top: 50px;" data-backdrop="static" data-keyboard="false" role="dialog">
    <div class="modal-dialog">
        Modal content
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Update Material Grade  </h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="form-group" hidden>
                        <input type="text" class="form-control" id="EditMaterial_Grade_Id">
                    </div>
                    <div class="form-group">
                        <label> Grade Name</label>
                        <input type="text" class="form-control" id="EditMaterial_Grade_name" placeholder="Grade Name">
                    </div>
                    <div class="form-group">
                        <label> Grade Rate</label>
                        <input type="text" class="form-control" id="EditMaterial_Grade_Rate" placeholder="Grade Rate">
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnSaveChanges">Save Changes</button>
            </div>
        </div>

    </div>
</div>


<script src="https://code.jquery.com/jquery-3.4.1.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
        crossorigin="anonymous"></script>
<script src="~/dist/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<!-- DataTables -->
<script src="~/dist/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/dist/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
<!-- SlimScroll -->
<script src="~/dist/bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
<!-- FastClick -->

<script>
    function refresh() {
        $('.EditMaster').on('click', function () {
            var gname = this.getAttribute("gname");
            var gid = this.getAttribute("gid");
            var grate = this.getAttribute("grate");
            $("#EditMaterial_Grade_Id").val(gid);
            $("#EditMaterial_Grade_name").val(gname);
            $("#EditMaterial_Grade_Rate").val(grate);
            $("#UpdateGrade").show();
        });
         
    };
</script>

<script type="text/javascript">
    refresh();
    $('#example1').DataTable({
        'paging': true,
        'lengthChange': false,
        'searching': false,
        'ordering': true,
        'info': true,
        'autoWidth': false
    })
    $(document).ready(function () {
        
       
        $('.close').on('click', function () {
            $("#UpdateGrade").hide();
        });
        $('#btnAdd').on('click', function () {

            $.ajax({
                type: 'POST',
                dataType: 'json',
                url: '/Home/AddMaterialGrade',
                data:
                {
                    GradeName: $("#MaterialGradeName").val(),
                    GradeRate: $("#MaterialGradeRate").val(),
                },
                success: function (data) {
                    $("#AddMaterialGrade").hide(),
                        // alert(data);
                        location.reload();
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {

                }
            });
        });

      

        $('#btnSaveChanges').on('click', function () {
            debugger;
            var gid = $("#EditMaterial_Grade_Id").val();
            var gname = $("#EditMaterial_Grade_name").val();
            var grate = $("#EditMaterial_Grade_Rate").val();
            $.ajax({
                type: 'POST',
                dataType: 'json',
                url: '/Home/UpdateMaterialGrade',
                data:
                {
                    Material_Grade_Id: gid,
                    Material_Grade_Name: gname,
                    Material_Grade_Rate: grate
                },
                success: function (data) {
                    $("#UpdateGrade").hide();
                    location.reload();
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {

                }
            });
        });
    });
</script>
