<!-- Main content -->

@model  IEnumerable<ReyDel.Models.ColourMaster>
<section class="content">


    <div class="row">
        <div class="col-xs-12">

            <!-- /.box -->
            <div class="box">
                <div class="box-header">

                    <h3 class="box-title"><b>Colour List</b></h3>
                    <button type="button" class="btn btn-info pull-right" data-toggle="modal" data-target="#AddColourMaster" style="margin-left:90px;">Add New </button>

                    @Html.Partial("../Home/AddColourMaster")

                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Sr. No.</th>
                                <th>Colour Name</th>
                                <th>Action</th>


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Colour_Id</td>
                                    <td>
                                        @item.Colour_Name

                                    </td>
                                    <td>
                                        <span class="EditColourMaster" Colourname="@item.Colour_Name" Colourid="@item.Colour_Id"><i class="fa fa-edit"></i></span>
                                    </td>

                                </tr>

                            }

                        </tbody>

                    </table>
                </div>

            </div>

        </div>

    </div>

</section>
<div id="UpdateColour" class="modal fade in" style="padding-top: 50px;" data-backdrop="static" data-keyboard="false" role="dialog">
    <div class="modal-dialog">
        Modal content
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Update ColourMaster   </h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="form-group" hidden>
                        <input type="text" class="form-control" id="UpdateColour_Id">
                    </div>
                    <div class="form-group">
                        <label> Colour Name</label>
                        <input type="text" class="form-control" id="UpdateColour_Name" placeholder="Update Colour Name">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnSaveChanges">Save Changes</button>
            </div>
        </div>

    </div>
</div>


<script src="https://code.jquery.com/jquery-3.4.1.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
        crossorigin="anonymous"></script>
<script src="~/dist/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<!-- DataTables -->
<script src="~/dist/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/dist/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
<!-- SlimScroll -->
<script src="~/dist/bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
<!-- FastClick -->

<script>
    function refresh() {
        $('.EditColourMaster').on('click', function () {
            var Colourname = this.getAttribute("Colourname");
            var Colourid = this.getAttribute("Colourid");
            $("#UpdateColour_Id").val(Colourid);
            $("#UpdateColour_Name").val(Colourname);
            $("#UpdateColour").show();
        });

    };
</script>

<script src="~/Content/js/jquery-2.1.1.js"></script>
<script type="text/javascript">
    refresh();
    $('#example1').DataTable({
        'paging': true,
        'lengthChange': false,
        'searching': false,
        'ordering': true,
        'info': true,
        'autoWidth': false
    })
    $(document).ready(function () {
        $('.close').on('click', function () {
            $("#UpdateColour").hide();
        });
        $('#btnAdd').on('click', function () {

            $.ajax({
                type: 'POST',
                dataType: 'json',
                url: '/Home/AddColourMaster',
                data:
                {
                    ColourName: $("#ColourName").val(),

                },
                success: function (data) {
                    $("#AddColourMaster").hide(),
                        // alert(data);
                        location.reload();
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {

                }
            });
        });

        $('#btnSaveChanges').on('click', function () {
            debugger;
            var Colourid = $("#UpdateColour_Id").val();
            var Colourname = $("#UpdateColour_Name").val();
            $.ajax({
                type: 'POST',
                dataType: 'json',
                url: '/Home/UpdateColourMaster ',
                data:
                {
                    Colour_Id: Colourid,
                    Colour_Name: Colourname,
                },
                success: function (data) {
                    $("#UpdateColour").hide();
                    location.reload();
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {

                }
            });
        });
    });

</script>

