<!-- Main content -->

@model  IEnumerable<ReyDel.Models.REIMaster>
<section class="content">


    <div class="row">
        <div class="col-xs-12">

            <!-- /.box -->
            <div class="box">
                <div class="box-header">

                    <h3 class="box-title"><b>REI List</b></h3>
                    <button type="button" class="btn btn-info pull-right " data-toggle="modal" data-target="#AddREIMaster" style="margin-left: 102px;">Add New</button>
                    @Html.Partial("../Home/AddREIMaster")

                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Sr. No.</th>
                                <th>REI Name</th>
                                <th>Action</th>


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.REI_Id</td>
                                    <td>
                                        @item.REI_Name

                                    </td>
                                    <td>
                                        <span class="EditREIMaster" REIname="@item.REI_Name" REIid="@item.REI_Id"><i class="fa fa-edit"></i></span>
                                    </td>

                                </tr>

                            }

                        </tbody>

                    </table>
                </div>

            </div>

        </div>

    </div>

</section>
<div id="UpdateREI" class="modal fade in" style="padding-top: 50px;" data-backdrop="static" data-keyboard="false" role="dialog">
    <div class="modal-dialog">
        Modal content
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Update REIMaster  </h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="form-group" hidden>
                        <input type="text" class="form-control" id="UpdateREI_Id">
                    </div>
                    <div class="form-group">
                        <label> REI Name</label>
                        <input type="text" class="form-control" id="UpdateREI_Name" placeholder="UpdateREI_Name">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnSaveChanges">Save Changes</button>
            </div>
        </div>

    </div>
</div>



<script src="https://code.jquery.com/jquery-3.4.1.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
        crossorigin="anonymous"></script>
<script src="~/dist/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<!-- DataTables -->
<script src="~/dist/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/dist/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
<!-- SlimScroll -->
<script src="~/dist/bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
<!-- FastClick -->

<script>
    function refresh() {
        $('.EditREIMaster').on('click', function () {
            var REIname = this.getAttribute("REIname");
            var REIid = this.getAttribute("REIid");
            $("#UpdateREI_Id").val(REIid);
            $("#UpdateREI_Name").val(REIname);
            $("#UpdateREI").show();
        });

    };
</script>

<script type="text/javascript">

    refresh();
    $('#example1').DataTable({
        'paging': true,
        'lengthChange': false,
        'searching': false,
        'ordering': true,
        'info': true,
        'autoWidth': false
    })

    $(document).ready(function () {
        $('.close').on('click', function () {
            $("#UpdateREI").hide();
        });
        $('#btnAdd').on('click', function () {

            $.ajax({
                type: 'POST',
                dataType: 'json',
                url: '/Home/AddREIMaster',
                data:
                {
                    REIName: $("#REIName").val(),

                },
                success: function (data) {
                    $("#AddREIMaster").hide(),
                        // alert(data);
                        location.reload();
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {

                }
            });
        });

        $('#btnSaveChanges').on('click', function () {
            debugger;
            var REIid = $("#UpdateREI_Id").val();
            var REIname = $("#UpdateREI_Name").val();
            $.ajax({
                type: 'POST',
                dataType: 'json',
                url: '/Home/UpdateREIMaster',
                data:
                {
                    REI_Id: REIid,
                    REI_Name: REIname,
                },
                success: function (data) {
                    $("#UpdateREI").hide();
                    location.reload();
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {

                }
            });
        });
    });


</script>
